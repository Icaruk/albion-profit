{
	"$schema": "https://biomejs.dev/schemas/1.7.2/schema.json",
	"files": {
		"ignore": [
			"**/node_modules/**",
			"**/dist/**",
			"src/paraglide",
			"src/data/scripts/itemData/itemData.json",
			"src/data/scripts/items/items.json",
			"src/data/items.js"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 100,
		"indentStyle": "tab",
		"indentWidth": 4,
		"formatWithErrors": false
	},
	"javascript": {
		"formatter": {
			"trailingComma": "all"
		}
	},
	"linter": {
		"enabled": true,
		"ignore": ["dbschema/**"],
		"rules": {
			"recommended": true,
			"style": {
				"noParameterAssign": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off",
				"noUndeclaredVariables": "error"
			}
		}
	}
}
